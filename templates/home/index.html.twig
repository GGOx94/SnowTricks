{% extends 'base.html.twig' %}

{% block title %}HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .banner-container { position: relative; }
    .banner-container .btn {
        position: absolute;
        bottom:25%;
        right:2%;
        color: white;
        font-size: 16px;
        padding: 18px 72px;
        border: none;
        cursor: pointer;
        border-radius: 25px;
        border-left: 75px;
        border-right: 75px;
    }
</style>

    {# TODO : fix image height & width to 100% screen including navbar#}
    <div class="banner-container container-fluid px-0">
        <div class="row mx-0">
            <div class="col-12 px-0">
                <img src="/medias/banner.png" class="img-fluid w-100">
            </div>
        </div>
        {# TODO: down arrow icon #}
        <a href="#tricks" class="banner-button btn btn-info" >V V V</a>
    </div>

    <h1 class="text-center" style="margin: 80px;">Tricks !</h1>

    {# - - - TRICKS SECTION - - - #}
    <div id="tricks">
    {%  for trick in tricks %}

        <hr><br>
        <h2>{{ trick.title|raw }}</h2>
        <div>
            <p>
                {{ trick.description|raw }}
            </p>
            <small>Trick créé le : {{ trick.createdAt|date("m/d/Y") }}</small>
            <a href="{{ path('app_trick', {'slug': trick.slug}) }}">Voir le trick</a>
        </div>

    {% endfor %}
    </div>
{% endblock %}
