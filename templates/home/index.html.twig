{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/homepage.css')}}"/>
    <script src="{{ asset('js/homepage.js') }}"></script>
{% endblock %}

{% block title %}SnowTricks{% endblock %}

{% block body %}

    <div class="hero" id="hero">
        <h1>SnowTricks</h1>
        <p class="hero-text">Partagez votre passion !</p>
        <a href="#tricks" id="navHeroBtn" class="nav-btn btn btn-info">
            <img src="/medias/icons/arrow.png" alt="Se déplacer dans la page"/>
        </a>
    </div>

    <div id="tricks">
        {% include('home/tricks.html.twig') %}
        {# This div will be fed by ajax request to HomeController, fetching a limited number of tricks : see js/homepage.js #}
    </div>

    <div class="text-center mb-3">
        <a id="load-more-btn" class="btn btn-info" onclick="loadMoreTricks()">Charger plus de tricks</a>
    </div>

    <div class="btn-container">
        <a href="#tricks" id="navTricksBtn" class="nav-btn btn btn-info">
            <img src="/medias/icons/arrow.png" alt="Se déplacer dans la page"/>
        </a>
    </div>

{% endblock %}


