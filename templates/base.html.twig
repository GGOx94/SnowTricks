{#                            <a class="dropdown-item" href="#">Separated link</a>#}
{#                        </div>#}
{#                    </li>#}
                </ul>
            </div>
        </div>
    </nav>

    {% include '_partials/_flash.html.twig' %}

    {% block body %}{% endblock %}

    </body>
</html>
