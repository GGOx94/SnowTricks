{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-5 fw-bolder">Connexion</h1>

    {% if error %}
        <div class="d-flex justify-content-center mb-4 text-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="d-flex justify-content-center text-center">
        <form action="{{ path('app_login') }}" method="POST" class="col-4">

            <input type="email" id="username" name="_username" class="form-control mb-4" placeholder="Votre adresse email"/>
            <input type="password" id="password" name="_password" class="form-control mb-4" placeholder="Votre mot de passe"/>

            <button type="submit" class="btn btn-primary btn-block mb-4 py-1 px-4 fs-4">Se connecter</button>
        </form>
    </div>

    <div class="text-center">
        <p><a class="text-center" href="{{ path('app_forgot_password') }}">J'ai oubli√© mon mot de passe</a></p>
        <p>Vous n'avez pas de compte ?<br/><a href="{{ path('app_register') }}">S'enregistrer</a></p>
    </div>
</div>
{% endblock %}
